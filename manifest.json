{
    "name": "yomu",
    "version": "0.0.1",
    "description": "Chrome extension that parses Japanese and shows dictionary results ðŸ“š",
    "icons": {
        "16": "icon/logo-16.png",
        "48": "icon/logo-48.png",
        "128": "icon/logo-128.png"
    },
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["vendor/js/kuromoji.js", "worker.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["style_inject.css"],
            "js": ["vendor/js/kuromoji.js", "inject.js"]
        }
    ],
    "manifest_version": 2
}
